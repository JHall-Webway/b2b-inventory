<link rel="stylesheet" href="/stylesheets/dashboard.css">
<div class="container">
    <div class="row">
        {{!-- SELECT existing customer --}}
        <div class="col-sm-6">
            <section>
                <h2>My Customers</h2>
                <form class="new-cust-form" id="cust-form">
                    <div>
                        <label for="cust_name">Customer Name</label>
                        <input type="text" id="cust_name" name="cust_name" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-info form-control">Add new customer</button>
                </form>
            </section>
            {{#if custList.length}}
            <section>
                <button type="submit" class="btn btn-info form-control add-customer" id="cust-btn">Add new customer</button>
                <ul class="post-list list-group">
                    {{#each custList as |customer|}}
                    <li class="list-group-item list-group-item-dark">
                        <a href="/dashboard/custDetail/{{customer.id}}" class="get-customer">{{customer.customer_name}}</a>
                    </li>
                    {{/each}}
                </ul>
            </section>
            {{/if}}
        </div>
        {{!-- EDIT data --}}
        <div class="col-sm-6">
            <section>
                <h2>Manage data</h2>
                <a href="/dashboard/createOrder"><button class="btn btn-dark col-sm create-order" id="manage">Create new order</button></a>
                <a href="/dashboard/editInventory" class="btn btn-dark col-sm edit-inv"  id="manage">Edit Inventory</a>
                {{!-- <a href="/dashboard/generateInvRep" class="btn btn-success col-sm edit-order">Generate Inventory Report</a> --}}
                <a id="report"  class="btn btn-dark col-sm report" style="color: white;" id="manage">Inventory Report</a>
            </section>
            <section id="rep-table">

            </section>
        </div>
        {{!-- Inventory table --}}
        <div class="col-sm">
            <section>
                <h2>Current inventory</h2>
                <form class="new-inv-form" id="product-form">
                    <div>
                        <label for="prod-name">Add product</label>
                        <input type="text" id="prod-name" name="prod-name" class="form-control" />
                    </div>
                    <div>
                        <label for="prod-qty">Add qty</label>
                        <input type="number" min="1" max="25000" id="prod-qty" name="prod-qty" class="form-control"/>
                    </div>
                    <button type="submit" class="btn btn-info">Add product</button>
                </form>
            </section>
            <section>
                <button type="submit" class="btn btn-info form-control add-product" id="prod-btn">Add new product</button>
                <table class="table table-success table-striped">
                    <thead>
                        <th>Product</th>
                        <th>Quantity</th>
                    </thead>

                    <tbody>
                        {{#each productList as |product|}}
                        <tr>
                            <td>{{product.product_name}}</td>
                            <td>{{product.quantity}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </section>
        </div>

    </div>
</div>

<script src="/javascript/generate-report.js"></script>
<script src="/javascript/create-customer.js"></script>
<script src="/javascript/add-product.js"></script>