<section>
    <h2>{{customer_data.customer_name}}'s Orders</h2>
    <div class="container">
        <div class="row">
            {{#each customer_data.orders as |order|}}
            <div class="col-sm">
                <h3>Order ID: {{order.id}}</h3>
                <h4>Due Date: {{order.due_date}}</h4>
                <table class="table">
                    <thead>
                        <th>Product</th>
                        <th>Quantity</th>
                    </thead>
                    <tbody>
                        {{#each order.products as |product|}}
                        <tr>
                            <td>{{product.product_name}}</td>
                            <td>{{product.orderdetail.quantity}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{/each}}     
        </div>
    </div>
</section>